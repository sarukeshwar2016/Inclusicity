# create .gitignore with recommended entries
@"
.env
venv/
__pycache__/
*.pyc
.DS_Store
"@ | Out-File -Encoding UTF8 .gitignore

# remove .env from git index (so it is no longer tracked), but keep the local file
git rm --cached backend\.env -ErrorAction SilentlyContinue
git rm --cached .env -ErrorAction SilentlyContinue

# also remove any accidentally committed venv or other junk
git rm -r --cached venv -f -ErrorAction SilentlyContinue
